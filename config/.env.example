# ────────────────────────────────────────────────
# Cetus Rebalance Bot – Environment Variables
# Copy to .env and fill in secrets.
# NEVER commit .env to version control.
# ────────────────────────────────────────────────

# Sui RPC URL
SUI_RPC_URL=https://fullnode.mainnet.sui.io:443

# Wallet – choose one
MNEMONIC="word1 word2 word3 ... word24"
# KEYSTORE_PATH=/home/user/.sui/sui.keystore

WALLET_ADDRESS=0xYOUR_WALLET_ADDRESS

# Pool
POOL_ID=0xYOUR_POOL_ID
# POSITION_ID=0xYOUR_POSITION_ID

# Token types
TOKEN_A_TYPE=0x2::sui::SUI
TOKEN_B_TYPE=0x5d4b302506645c37ff133b98c4b50a4ae3ec4d...

# Strategy
REBALANCE_MODE=price_band
PRICE_BAND_PCT=1.5
DRIFT_TRIGGER_PCT=0.5
MIN_INTERVAL_SECONDS=60
SLIPPAGE_BPS=50

# Safety
GAS_BUDGET=500000000
MAX_RETRIES=3
DRY_RUN=true
CONFIRM=false

# Observability
TELEGRAM_WEBHOOK=
LOG_LEVEL=info
